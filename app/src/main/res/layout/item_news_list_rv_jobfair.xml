<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp">

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1">


        <TextView
            android:id="@+id/tv_title_news_detail"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_marginLeft="3dp"
            android:lineSpacingExtra="10dp"
            android:lines="2"
            android:paddingLeft="5dp"
            android:paddingTop="10dp"
            android:textColor="@android:color/black"
            android:textSize="18sp" />
        <TextView
            android:id="@+id/tv_detail_news_detail"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="3dp"
            android:lineSpacingExtra="10dp"
            android:lines="2"
            android:paddingLeft="5dp"
            android:layout_below="@+id/tv_title_news_detail"
            android:textColor="@android:color/black"
            android:textSize="15sp" />
        <TextView

            android:id="@+id/tv_time_news_detail"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_title_news_detail"
            android:paddingTop="14sp"
            android:gravity="center"
            android:layout_toRightOf="@+id/tv_detail_news_detail"
            android:textColor="@color/colorAccent"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/tv_author_news_detail"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_below="@+id/tv_detail_news_detail"
            android:layout_marginLeft="3dp"
            android:paddingLeft="5dp"
            android:textColor="@android:color/darker_gray"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/tv_zan_news_detail"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_below="@+id/tv_detail_news_detail"
            android:layout_marginLeft="3dp"
            android:layout_toRightOf="@+id/tv_author_news_detail"
            android:gravity="right"
            android:paddingTop="16dp"
            android:textColor="@android:color/darker_gray"
            android:textSize="15sp" />
    </RelativeLayout>

</LinearLayout>